#!/bin/sh

set -eu

readonly description='Adds a repo to the local store from a remote url.'
readonly this="$(basename "${0}")"

function usage() {
  echo 'Usage:'
  echo "    ${this} <name> <git-url>"
  echo
  echo 'Description:'
  echo "    ${description}"
}

case "$*" in
  --help|-h)
    usage
    exit
    ;;

  --description)
    echo "${description}"
    exit
    ;;
esac

if [ $# -ne 2 ]; then
  usage
  exit 1
fi
readonly url="${1}"
readonly name="${2}"

readonly repo_dir="${HOME}/.config/repo"
readonly git_dir="${repo_dir}/${name}"


set -x

# Close the repo.
git clone --bare "${url}" "${git_dir}"


# Fix up remote tracking.
git --git-dir="${git_dir}" config --local remote.origin.fetch '+refs/heads/*:refs/remotes/origin/*'
git --git-dir="${git_dir}" fetch --all


# Install pre-commit hooks.
GIT_DIR="${git_dir}" pre-commit install --allow-missing-config
