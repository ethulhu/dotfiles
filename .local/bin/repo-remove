#!/bin/sh

set -eu

readonly description='Remove a repo from the local store.'
readonly this="$(basename "${0}")"

function usage() {
  echo 'Usage:'
  echo "    ${this} <name>"
  echo
  echo 'Description:'
  echo "    ${description}"
}

case "$*" in
  --help|-h)
    usage
    exit
    ;;

  --description)
    echo "${description}"
    exit
    ;;
esac

if [ $# -ne 1 ]; then
  usage
  exit 1
fi
readonly name="${1}"

readonly worktrees="$(repo-list-worktrees "${name}")"
if [ "${worktrees}" ]; then
  echo "Repo ${name} has open worktrees:"
  for worktree in ${worktrees}; do
    echo "    ${worktree}"
  done
  exit 1
fi

readonly repo_dir="${HOME}/.config/repo"
confirm "Remove repo ${name} ?" &&
  rm -rf "${repo_dir}/${name}"
