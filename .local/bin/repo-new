#!/bin/sh

set -eu

readonly description='Creates a new repo in the local store.'
readonly this="$(basename "${0}")"

function usage() {
  echo 'Usage:'
  echo "    ${this} <name>"
  echo
  echo 'Description:'
  echo "    ${description}"
}

case "$*" in
  --help|-h)
    usage
    exit
    ;;

  --description)
    echo "${description}"
    exit
    ;;
esac

if [ $# -ne 1 ]; then
  usage
  exit 1
fi
readonly name="${1}"

readonly repo_dir="${HOME}/.config/repo"
readonly git_dir="${repo_dir}/${name}"


set -x

# Create the repo.
git init --bare "${git_dir}"


# Add the initial commit.
readonly empty_tree="$(git --git-dir="${git_dir}" mktree </dev/null)"
readonly initial_commit=$(git --git-dir="${git_dir}" commit-tree -m 'initial commit' "${empty_tree}")

git --git-dir="${git_dir}" update-ref HEAD "${initial_commit}"


# Install pre-commit hooks.
GIT_DIR="${git_dir}" pre-commit install --allow-missing-config
