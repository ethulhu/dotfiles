#!/bin/sh

set -eu

readonly description='Print information about a named repo.'
readonly this="$(basename "${0}")"

function usage() {
  echo 'Usage:'
  echo "    ${this} <name> <variable>"
  echo
  echo 'Description:'
  echo "    ${description}"
  echo
  echo 'Variables:'
  echo '    git-dir'
}

case "$*" in
  --help|-h)
    usage
    exit
    ;;

  --description)
    echo "${description}"
    exit
    ;;
esac

if [ $# -ne 2 ]; then
  usage
  exit 1
fi
readonly name="${1}"
readonly variable="${2}"


case "${variable}" in
  git-dir)
    echo "$(repo env repo-dir)/${name}"
    ;;

  *)
    echo "${this}: Unknown variable: ${variable}"
    exit 1
esac
