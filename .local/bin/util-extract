#!/bin/sh

set -eu

readonly description='Extract an archive, for many types of archive.'
readonly this="$(basename "${0}")"

usage() {
  echo 'Usage:'
  echo "    ${this} <path/to/archive>"
  echo
  echo 'Description:'
  echo "    ${description}"
}

case "$*" in
  --help|-h)
    usage
    exit
    ;;

  --description)
    echo "${description}"
    exit
    ;;
esac


if [ $# -ne 1 ]; then
  usage
  exit 1
fi

readonly archive="${1}"

if [ ! -f "${archive}" ]; then
  echo "${this}: Not an archive file: ${archive}"
  exit 1
fi

case "${archive}" in
	*.7z)       7z x "${archive}"         ;;
	*.Z)        uncompress "${archive}"   ;;
	*.gz)       gunzip "${archive}"       ;;
	*.jar)      unzip "${archive}"        ;;
	*.rar)      unrar x "${archive}"      ;;
	*.tar)      tar -xvf "${archive}"     ;;
	*.tbz2)     tar -jxvf "${archive}"    ;;
	*.tgz)      tar -xvf "${archive}"     ;;
	*.zip)      unzip "${archive}"        ;;
  *.bz2)      bunzip2 "${archive}"      ;;
  *.tar.bz2)  tar -jxvf "${archive}"    ;;
  *.tar.gz)   tar -zxvf "${archive}"    ;;

	*)
    echo "${this}: Unknown extension for archive: ${archive}"
    exit 1
    ;;

esac
