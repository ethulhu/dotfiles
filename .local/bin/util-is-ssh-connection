#!/bin/sh

set -eu

readonly description='Is the current session is connected to via SSH?'
readonly this="$(basename "${0}")"

function usage() {
  echo 'Usage:'
  echo "    ${this}"
  echo
  echo 'Description:'
  echo "    ${description}"
}

case "$*" in
  --help|-h)
    usage
    exit
    ;;

  --description)
    echo "${description}"
    exit
    ;;
esac

if [ $# -ne 0 ]; then
  usage
  exit 1
fi


function is_set() {
  declare -p "${1}" >/dev/null 2>/dev/null
}

is_set SSH_CLIENT || is_set SSH_CONNECTION || is_set SSH_TTY
