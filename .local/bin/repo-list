#!/bin/sh

set -eu

readonly description='List all repos in the local store.'
readonly this="$(basename "${0}")"

function usage() {
  echo 'Usage:'
  echo "    ${this}"
  echo
  echo 'Description:'
  echo "    ${description}"
}

case "$*" in
  --help|-h)
    usage
    exit
    ;;

  --description)
    echo "${description}"
    exit
    ;;
esac

if [ $# -ne 0 ]; then
  usage
  exit 1
fi


readonly repo_dir="${HOME}/.config/repo"

find "${repo_dir}" -depth 1 -type d | while read repo; do
  basename "${repo}"
done
