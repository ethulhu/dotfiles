#!/bin/sh

set -eu

readonly description='Fetches a repo from upstream.'
readonly this="$(basename "${0}")"

function usage() {
  echo 'Usage:'
  echo "    ${this} <name>"
  echo
  echo 'Description:'
  echo "    ${description}"
}

case "$*" in
  --help|-h)
    usage
    exit
    ;;

  --description)
    echo "${description}"
    exit
    ;;
esac

if [ $# -ne 1 ]; then
  usage
  exit 1
fi
readonly query="${1}"


case "${query}" in
  @all)
    repo-list
    ;;

  @https)
    repo-list | while read name; do
      if repo git "${name}" remote get-url origin | grep -q https://; then
        echo "${name}"
      fi
    done
    ;;

  *)
    echo "${query}"
    ;;

esac | while read name; do
  repo git "${name}" fetch --all --prune
done
