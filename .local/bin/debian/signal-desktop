#!/bin/sh

readonly args='--no-sandbox'
readonly binary='/usr/bin/signal-desktop'
readonly username='signal'

systemd-run \
	--pty \
	--property=DynamicUser=yes \
	--property=Group=${USER} \
	--property=SupplementaryGroups=audio \
	--property=SupplementaryGroups=video \
	--property=StateDirectory=${username} \
	--property=Environment=DISPLAY=${DISPLAY} \
	--property=Environment=HOME=/var/lib/${username} \
	"${binary}" ${args}
