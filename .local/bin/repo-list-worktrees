#!/bin/sh

set -eu

readonly description='List open worktrees for a named repo.'
readonly this="$(basename "${0}")"

function usage() {
  echo 'Usage:'
  echo "    ${this} <name>"
  echo
  echo 'Description:'
  echo "    ${description}"
}

case "$*" in
  --help|-h)
    usage
    exit
    ;;

  --description)
    echo "${description}"
    exit
    ;;
esac

if [ $# -ne 1 ]; then
  usage
  exit 1
fi
readonly query="${1}"


case "${query}" in
  @all)
    repo-list
    ;;

  *)
    echo "${query}"
    ;;

esac | while read name; do
  repo git "${name}" worktree list | awk '!/\(bare\)/ { print $1 }'
done

