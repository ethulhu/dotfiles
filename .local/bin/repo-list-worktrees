#!/bin/sh

set -eu

if [ $# -ne 1 ]; then
  echo "Usage: $(basename "${0}") <repo-name>"
  echo
  echo 'Summary: List open worktrees for a given repo.'
  exit 1
fi

readonly query="${1}"


case "${query}" in
  @all)
    repo-list
    ;;

  *)
    echo "${query}"
    ;;

esac | while read name; do
  repo git "${name}" worktree list | awk '!/\(bare\)/ { print $1 }'
done

