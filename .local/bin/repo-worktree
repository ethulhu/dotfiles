#!/bin/sh

set -eu

if [ $# -lt 2 -o $# -gt 3 ]; then
  echo "Usage: $(basename "${0}") <repo-name> <path/to/worktree> [branch]"
  echo
  echo 'Summary: Create a new worktree for a given repo.'
  exit 1
fi

readonly name="${1}"
readonly path="${2}"

if [ $# -eq 2 ]; then
  repo git "${name}" worktree add "${path}"
else
  readonly branch="${3}"
  repo git "${name}" worktree add "${path}" "${branch}"
fi
