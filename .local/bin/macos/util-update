#!/bin/sh

set -eu

function usage() {
  echo 'Usage:'
  echo "    $(basename "${0}")"
  echo
  echo 'Synopsis:'
  echo '    Update all updateables (Homebrew), install missing packages.'
}

if [ $# -eq 1 ] && [ "${1}" = '-h' ]; then
  usage
  exit
fi

brew update
brew upgrade

# Install any missing packages from ~/.Brewfile.
brew bundle install --global

# Python.
pip3 install \
  jinja2 \
  markdown \
  pip \
  pyyaml \
  reuse \
  --upgrade
