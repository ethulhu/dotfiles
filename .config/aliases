alias l='ls -1F'
alias la='ls -1aF'
alias ll='ls -lashF'

alias rm='rm -i'

alias mkdir='mkdir -p'
alias xargs='xargs -n1'

alias gd='go doc'

# Machines.
alias irc='mosh irc'
alias mail='mosh mail'

# Runtimes.
alias js='node --experimental-modules'
alias py3='python3'
alias py='python'

# Workaround for sslh.
alias mosh='mosh --bind-server=any'

# Open multiple files as vertical splits.
alias vim='vim -O'
