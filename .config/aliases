alias l='ls -1F'
alias la='ls -1aF'
alias ll='ls -lashF'

alias rm='rm -i'

alias mkdir='mkdir -p'
alias xargs='xargs -n1'

alias gd='go doc'

# machines.
alias irc='mosh irc'
alias mail='mosh mail'

# runtimes.
alias js='node --experimental-modules'
alias py3='python3'
alias py='python'

# workaround for sslh.
alias mosh='mosh --bind-server=any'
